@model SistemaCadastro.Models.Combustivel

@{
    ViewBag.Title = "Editar Combustível";
}

<h2>Editar Combustível</h2>

@using (Html.BeginForm("Editar", "Combustivel", FormMethod.Post))
{
    @Html.AntiForgeryToken() <!-- Incluindo o token antifalsificação -->

    @Html.HiddenFor(m => m.CombustivelId) <!-- Campo oculto para o ID do combustível -->

    <div class="form-group">
        @Html.LabelFor(m => m.Nome)
        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", placeholder = "Digite o nome do combustível" })
    </div>

    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    <a href="@Url.Action("ListarCombustivel", "Combustivel")" class="btn btn-secondary">Cancelar</a>
}
